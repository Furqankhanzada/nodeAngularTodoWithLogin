<!DOCTYPE html>
<html lang="en" ng-app="myApp">
<head>
    <meta charset="utf-8">
    <title>Todo List for Baber</title>
    <link rel="stylesheet" href="/css/semantic.css"/>
    <link rel="stylesheet" href="/css/style.css"/>
</head>
<body>
<div class="wrapper">
    <header class="header">
        <h2 class="ui header">
            <i class="circular inverted teal foursquare icon"></i>
            <div class="content">
                Todo List for Baber
                <div class="sub header">All Class members can register and add items for Baber :)</div>
            </div>
        </h2>
        <!-- Navigation Start -->
        <div data-access-level="accessLevels.public" class="ui green menu" ng-controller="navCtrl">
            <a class="item" href="/" ng-class="{active:isActive('/home')}">
                <i class="home icon"></i> Home
            </a>
            <a data-access-level="accessLevels.user" class="item" href="/todos" ng-class="{active:isActive('/todos')}">
                <i class="tasks icon"></i> Todos
            </a>
            <a data-access-level="accessLevels.user" class="item" href="/profile" ng-class="{active:isActive('/profile')}">
                <i class="user icon"></i> Profile
            </a>
            <div data-access-level="accessLevels.anon" class="right menu">
                <div class="item">
                    <button class="teal ui button" ng-click="goToLogin()">Log In</button>
                </div>
            </div>
            <div data-access-level="accessLevels.user" class="right menu">
                <div class="item">
                    <button class="teal ui button" ng-click="LogOut()">Log Out</button>
                </div>
            </div>
            <div data-access-level="accessLevels.user" class="right menu">
                <div class="item">
                    Hi {{user.username}}
                </div>
            </div>
        </div><!-- Navigation End -->
    </header> <!-- Header End -->

    <section id="content" class="body" ng-view>
    </section> <!-- #content End -->

    <footer class="footer">
        All Rights Reserved by Furqankhanzada.com
    </footer><!-- Footer End -->
</div>

<!-- In production use: <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script> -->

<script src="/lib/angular/angular.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js"></script>
<script src="/lib/angular/angular-cookies.js"></script>
<script src="/lib/angular/angular-route.js"></script>
<script src="/lib/angular/angular-sanitize.js"></script>
<script src="/js/routingConfig.js"></script>
<script src="/js/app.js"></script>
<script src="/js/services/services.js"></script>
<script src="/js/services/auth.js"></script>
<script src="/js/controllers/homeCtrl.js"></script>
<script src="/js/controllers/loginCtrl.js"></script>
<script src="/js/controllers/navCtrl.js"></script>
<script src="/js/controllers/profileCtrl.js"></script>
<script src="/js/controllers/signUpCtrl.js"></script>
<script src="/js/controllers/todosCtrl.js"></script>
<script src="/js/directives/auth.js"></script>
</body>
</html>